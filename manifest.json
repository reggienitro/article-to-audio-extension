{
  "manifest_version": 3,
  "name": "Article to Audio",
  "version": "1.0.0",
  "description": "Convert web articles to audio with customizable narration using your preferred deep male voices and speed settings.",

  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting",
    "cookies"
  ],

  "host_permissions": [
    "http://localhost:*/*",
    "https://localhost:*/*",
    "https://article-to-audio-extension-1.onrender.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Convert Article to Audio",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}